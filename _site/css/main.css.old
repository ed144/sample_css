  /* GLOBAL STYLES */
  html, body {
    margin: 0;
    padding: 0;
  }
  h1 {
    font-size: 7vw;
    margin-top: 0;
  }
  h2 {
  }
  a {
    color: #ff0000;
  }

  /* SOCIAL LINKS */




.social-list {
   list-style: none;
   padding: 0;
   text-align: right
}

.social-list > li {
   display: inline-block;
  margin: 0 0.5em;
}

.social-link {
  background: rgba(150,150,150,0.5);
  border-radius: 99px;
  box-sizing: border-box;
  color: #fff;
  display: inline-block;
  font-family: helvetica, arial, sans;
  font-size: 1em;
  font-weight: bold;
  height: 2.5em;
  line-height: 1;
  padding-top: 0.8em;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  width: 2.5em;
}

  /* HERO STYLES */
  .full-hero {
    background-color: #c7dbfc;
    height: 50vh;
  }

  /* HOMEPAGE STYLES */
.bio-wrapper {
 overflow: hidden;
 max-width: 960px;
 margin: auto;
 margin-bottom: 50px;

  }

.bio-wrapper:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";m
  clear: both;
  height: 0;
}


  .bio-box {
    border: 1px solid #000;
    border-color: transparent #000 black rgba(0,0,0,0);
border-style: dotted dashed groove ridge;
    box-sizing: border-box;
    float: left;
    font-size: 1rem;
    padding: 0 2% 2%;
    width: 23%;
    margin: 40px 1% 0;
  }
  .bio-box h3 {
    font-size: 1.5em;
  }

